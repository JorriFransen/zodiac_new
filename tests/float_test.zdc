
_math :: import math;
using _math;

std :: import std;

#run main();

main :: func() -> s64
{
    v3 : Vec3;

    v3.x = 1.2;
    v3.y = 2.34;
    v3.z = 3.456;

    @assert(v3.x == 1.2);
    @assert(v3.y == 2.34);
    @assert(v3.z == 3.456);
    print_vec3(*v3);

    sum := v3.x + v3.y + v3.z;

    std.print("sum: ");
    std.print_float(sum);
    std.print("\n");
    @assert(sum > 6.99);
    @assert(sum < 7.0);

    double_sum : double = v3.x + v3.y + v3.z;
    std.print("double_sum: ");
    std.print_double(double_sum);
    std.print("\n");

    @assert(double_sum >= 6.996);
    @assert(double_sum >= 6.9960001);

    return @cast(s64, sum);
}

print_vec3 :: func (v: *Vec3)
{
    std.print("x: ");
    std.print_float(v.x);
    std.print(", y: ");
    std.print_float(v.y);
    std.print(", z: ");
    std.print_float(v.z);
    std.println(" ");
    return;
}

