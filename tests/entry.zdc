
// _std_ :: import std;

#noreturn call_main_and_exit :: func()
{
    // _std_._open_default_io_handles();

    exit_code := main();
    @exit(exit_code);
}

#if (PLATFORM_WINDOWS) {


    mainCRTStartup :: func ()
    {
        call_main_and_exit();
    }

} #elseif (PLATFORM_LINUX) {

    #naked #noreturn _start :: func ()
    {
        call_main_and_exit();
    }

} #else {
    @static_assert(false);
}

