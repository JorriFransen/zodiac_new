
#naked _start :: func ()
{
    posix_call_main_and_exit();
}

posix_call_main_and_exit :: func ()
{
    exit_code := main();
    @exit(exit_code);
}

ret_42 :: func() -> s64
{
    return 42;
}

main :: func () -> s64
{
    return echo(add(40, 2));
}

add :: func (a: s64, b: s64) -> s64
{
    aa := a;
    bb := b;
    return aa + bb;
}

echo :: func (val: s64) -> s64
{
    result := val;
    return result;
}
