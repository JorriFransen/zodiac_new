strlen :: func (cstr: *u8) -> s64
{
    i := 0;
    while (cstr[i] != 0)
    {
        i = i + 1;
    }
    return i;
}

println :: func (cstr: *u8)
{
    print(cstr);
    nl := 10;
    @syscall(1, 1, *nl, 1);
    return;
}

print :: func (cstr: *u8)
{
    @syscall(1, 1, cstr, strlen(cstr));
    return;
}

add_vec2 :: func (v: *Vec2) -> s64
{

    return v.x + v.y;
}

