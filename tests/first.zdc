print_vec2 :: func (v: *Vec2) 
{
    @syscall(1, 1, "x: ", 3);
    //print_num(v.x);
    @syscall(1, 1, ", y: ", 5);
    //print_num(v.y);
    print_newline();
    return;
}

print_newline :: func ()
{
    nl := 10;
    @syscall(1, 1, *nl, 1);
    return;
}

add_vec2 :: func (v: *Vec2) -> s64
{

    return v.x + v.y;
}

main :: func () -> s64
{
    // 1 = sys_write (syscall num)
    // 1 = stdout_fileno
    count := 4;
    while (count > 0)
    {
        @syscall(1, 1, "Hello World!", 12);
        print_newline();
        count = count - 1;
    }
    count = 26;
    c := 65;
    while (count > 0)
    {
        @syscall(1, 1, *c, 1);
        c = c + 1;
        count = count - 1;
    }
    print_newline();

    p1 : Vec2;
    p1.x = 33;
    p1.y = 44;

    print_vec2(*p1);
    return add_vec2(*p1);
}

#foreign #noreturn ExitProcess :: func (exit_code: u32) -> void

mainCRTStartup :: func () -> s32
{
    exit_code := main();
    @exit(exit_code);
}

#naked #noreturn _start :: func ()
{
    posix_call_main_and_exit();
}

#noreturn posix_call_main_and_exit :: func ()
{
    exit_code := main();
    @exit(exit_code);
}
