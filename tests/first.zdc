
std :: import std;
math :: import math;

using math;

print_vec2 :: func (v: *Vec2)
{
    std.print("x: ");
    std.print_num(v.x);
    std.print(", y: ");
    std.print_num(v.y);
    std.println(" ");
    return;
}

Vec2_Ptr :: typedef *Vec2;

add_vec2 :: func (v: Vec2_Ptr) -> s64
{
    return v.x + v.y;
}

glob_int_const : s64 : 5;

// global_int := 4 + 1;
global_int : s64;

#run main();

#test "add_vec2" {

    a : Vec2;
    a.x = 1;
    a.y = 2;

    b : Vec2;
    b.x = 3;
    b.y = 4;

    expected_result : Vec2;
    expected_result.x = 4;
    expected_result.y = 6;

    result := add_vec2(*a, *b);

    @assert(result.x == expected_result.x);
    @assert(result.y == expected_result.y);
}

