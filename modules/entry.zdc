
_std_ :: import std;

pre_main :: func()
{
    _std_._open_default_io_handles();
    return;
}

#if (PLATFORM_WINDOWS) {

    mainCRTStartup :: func ()
    {
        pre_main();
        @exit(main());
    }

} #elseif (PLATFORM_LINUX) {

    #noreturn call_main_and_exit :: func ()
    {
        pre_main();
        @exit(main());
    }

    #naked #noreturn _start :: func ()
    {
        call_main_and_exit();
    }

} #else {
    @static_assert(false);
}

