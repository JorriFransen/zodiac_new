
_std_ :: import std;
_os_  :: import os;

pre_main :: func()
{
    _std_._open_default_io_handles();
    return;
}

#if (PLATFORM_WINDOWS) {

    mainCRTStartup :: func ()
    {
        pre_main();
        @exit(main());
    }

} #elseif (PLATFORM_LINUX) {

    #noreturn call_main_and_exit :: func ()
    {
        pre_main();
        @exit(main());
    }

    #naked #noreturn _start :: func ()
    {
        call_main_and_exit();
    }

} #else {
    @static_assert(false);
}

default_assert_handler :: func(cond: bool, file_name: *u8, line: s64)
{
    if (!cond) {
        // @TODO: We should print to stdout and use lower level print functions here, so
        //  we have the possibilty to assert from print itself.
        std.print("Assertion failed: ");
        std.print(file_name);
        std.print(":");
        std.print_numln(line);

        os.abort();
    }
}
